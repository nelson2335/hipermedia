<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dibujo</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgb(92, 73, 44);
        }
        main {
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.4.0/p5.js"></script>
</head>
<body>
    <container>
        <h1>De wordpress a dibujo processing</h1>
        <main>
            <canvas id="myCanvas"></canvas>
        </main>
    </container>
    <script>
        // Lista de pelotas
        let balls = [];
        // Número de pelotas a crear
        const numBalls = 5;
        // Colores para las pelotas
        const colors = [
            'red',    // Rojo
            'green',  // Verde
            'blue',   // Azul
            'yellow', // Amarillo
            'orange'  // Naranja
        ];

        function setup() {
            // Crear el lienzo y asociarlo al elemento canvas
            createCanvas(800, 600).parent('myCanvas');
            // Crear pelotas en posiciones fijas
            balls.push({
                x: 100, y: 100, radius: 20, color: colors[0], speedX: 1, speedY: 1
            });
            balls.push({
                x: 300, y: 100, radius: 20, color: colors[1], speedX: 1, speedY: 1
            });
            balls.push({
                x: 500, y: 100, radius: 20, color: colors[2], speedX: 1, speedY: 1
            });
            balls.push({
                x: 200, y: 300, radius: 20, color: colors[3], speedX: 1, speedY: 1
            });
            balls.push({
                x: 400, y: 300, radius: 20, color: colors[4], speedX: 1, speedY: 1
            });
        }

        function draw() {
            // Limpiar el lienzo con un color de fondo negro
            background(0);

            // Dibujar y mover cada pelota
            for (let ball of balls) {
                fill(ball.color);  // Establecer el color de la pelota
                noStroke();  // Sin borde para las pelotas
                ellipse(ball.x, ball.y, ball.radius * 2);  // Dibujar la pelota
                
                // Actualizar la posición de la pelota
                ball.x += ball.speedX;
                ball.y += ball.speedY;

                // Rebote en los bordes del lienzo
                if (ball.x - ball.radius < 0 || ball.x + ball.radius > width) {
                    ball.speedX *= -1;  // Rebotar en el borde horizontal
                }
                if (ball.y - ball.radius < 0 || ball.y + ball.radius > height) {
                    ball.speedY *= -1;  // Rebotar en el borde vertical
                }
            }
        }
    </script>
</body>
</html>

